---
interface Schedule {
  day: string;
  classes: { name: string; time: string }[];
}

interface Branch {
  name: string;
  address: string;
  schedule: Schedule[];
  mapUrl: string;
}

const branches: Branch[] = [
  {
    name: "Sucursal Chacon",
    address: "Av. Zeus 101, PRI Chacón, 42186 PRI Chacón, Hgo.",
    schedule: [
      { day: "Lunes", classes: [{ name: "Danza urbana", time: "5:00 PM" }, { name: "Ballet inicial", time: "6:00 PM" }] },
      { day: "Martes", classes: [{ name: "Ballet Intermedio", time: "5:00 PM" }, { name: "Ballet avanzado", time: "6:00 PM" }] },
      { day: "Miércoles", classes: [{ name: "Danza urbana", time: "5:00 PM" }, { name: "Ballet inicial", time: "6:00 PM" }] },
      { day: "Jueves", classes: [{ name: "Ballet Intermedio", time: "5:00 PM" }, { name: "Ballet avanzado", time: "6:00 PM" }] },
    ],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d234.20133163622359!2d-98.73568385226545!3d20.08303369834296!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1a73a40fc46ad%3A0x276e5102642c3308!2sPlaza%20Zeus!5e0!3m2!1ses-419!2smx!4v1737037817982!5m2!1ses-419!2smx",
  },
  {
    name: "Sucursal C Doria",
    address: "Gral. Nicolás Flores 100, Juan C. Doria, 42083 Pachuca de Soto, Hgo.",
    schedule: [
      { day: "Lunes", classes: [{ name: "Ballet Intermedio", time: "5:00 PM" }, { name: "Ballet avanzado", time: "6:00 PM" }] },
      { day: "Martes", classes: [{ name: "Danza urbana", time: "5:00 PM" }, { name: "Ballet inicial", time: "6:00 PM" }] },
      { day: "Miércoles", classes: [{ name: "Ballet Intermedio", time: "5:00 PM" }, { name: "Ballet avanzado", time: "6:00 PM" }] },
      { day: "Jueves", classes: [{ name: "Danza urbana", time: "5:00 PM" }, { name: "Ballet inicial", time: "6:00 PM" }] },
    ],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d234.22492164465064!2d-98.77864826315758!3d20.06724289232217!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1a0e2fed70c93%3A0xc09c12aa10570497!2sOtilio%20Villegas%20100%2C%20Juan%20C.%20Doria%2C%2042083%20Pachuca%20de%20Soto%2C%20Hgo.!5e0!3m2!1ses-419!2smx!4v1737482165236!5m2!1ses-419!2smx",
  },
];
---
<section class="bg-white py-8 md:py-16 relative overflow-hidden">
  <!-- Efecto de textura decorativa -->
  <div class="absolute inset-0 bg-[radial-gradient(#f3f4f6_1px,transparent_1px)] bg-[size:30px_30px] opacity-20"></div>

  <div class="container mx-auto px-3 md:px-6 relative z-10">
    <!-- Título ajustado -->
    <h2 class="text-center text-3xl md:text-5xl font-bold mb-8 md:mb-12 text-gray-900 px-2">
      <span class="bg-gradient-to-r from-pink-600 to-red-600 bg-clip-text text-transparent">
        Nuestras sucursales
      </span>
    </h2>

    <!-- Grid optimizado -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-6">
      {branches.map((branch) => (
        <div class="group relative bg-white p-4 md:p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-200/50 hover:border-gray-300/60">
          <!-- Cabecera compacta -->
          <div class="mb-4 pb-4 border-b border-gray-200/40">
            <div class="flex items-start justify-between gap-3">
              <div class="flex-1 min-w-0">
                <h3 class="text-xl md:text-2xl font-bold text-gray-900 truncate">
                  {branch.name}
                </h3>
                <p class="mt-2 text-xs md:text-sm text-gray-600 leading-tight">
                  {branch.address}
                </p>
              </div>
              <a
                href={branch.mapUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="p-1.5 bg-gradient-to-r from-pink-50 to-red-50 rounded-lg hover:scale-105 transition-transform duration-200 shadow-xs"
                aria-label={`Ver ubicación de ${branch.name}`}
              >
                <svg class="w-5 h-5 md:w-6 md:h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </a>
            </div>
          </div>

          <!-- Mapa compacto -->
          <div class="relative mb-4 overflow-hidden rounded-xl shadow-sm transform transition-transform duration-300 hover:scale-[1.01]">
            <iframe
              src={branch.mapUrl}
              title={`Mapa de ${branch.name}`}
              class="w-full h-40 md:h-48 lg:h-56"
              allowfullscreen=""
              loading="lazy"
            ></iframe>
            <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent pointer-events-none"></div>
          </div>

          <!-- Horario ultra compacto -->
          <div class="space-y-3">
            {branch.schedule.map((scheduleItem) => (
              <div class="flex flex-col md:flex-row gap-2 p-2 bg-gray-50/40 rounded-lg hover:bg-gray-100/20 transition-colors duration-150">
                <!-- Día -->
                <div class="flex items-center md:w-24 flex-none">
                  <span class="w-2 h-2 bg-gradient-to-r from-pink-400 to-red-400 rounded-full mr-2"></span>
                  <span class="text-xs md:text-sm font-medium text-gray-700 truncate">
                    {scheduleItem.day}
                  </span>
                </div>
                
                <!-- Clases -->
                <div class="flex-1 grid gap-1.5">
                  {scheduleItem.classes.map((classItem) => (
                    <div class="flex justify-between items-center bg-white px-2.5 py-1.5 rounded-md shadow-xs border border-gray-200/30 text-xs md:text-sm">
                      <span class="font-medium text-gray-700 truncate">
                        {classItem.name}
                      </span>
                      <span class="font-semibold bg-gradient-to-r from-pink-500 to-red-500 bg-clip-text text-transparent ml-2">
                        {classItem.time}
                      </span>
                    </div>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>