---
interface Schedule {
  day: string;
  classes: { name: string; time: string }[];
}

interface Branch {
  name: string;
  address: string;
  schedule: Schedule[];
  mapUrl: string;
}

const branches: Branch[] = [
  {
    name: "Sucursal Chacon",
    address: "Av. Zeus 101, PRI Chacón, 42186 PRI Chacón, Hgo.",
    schedule: [
      { day: "Lunes", classes: [{ name: "Danza urbana", time: "5:00 PM" }, { name: "Ballet inicial", time: "6:00 PM" }] },
      { day: "Martes", classes: [{ name: "Ballet Intermedio", time: "5:00 PM" }, { name: "Ballet avanzado", time: "6:00 PM" }] },
      { day: "Miércoles", classes: [{ name: "Danza urbana", time: "5:00 PM" }, { name: "Ballet inicial", time: "6:00 PM" }] },
      { day: "Jueves", classes: [{ name: "Ballet Intermedio", time: "5:00 PM" }, { name: "Ballet avanzado", time: "6:00 PM" }] },
    ],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d234.20133163622359!2d-98.73568385226545!3d20.08303369834296!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1a73a40fc46ad%3A0x276e5102642c3308!2sPlaza%20Zeus!5e0!3m2!1ses-419!2smx!4v1737037817982!5m2!1ses-419!2smx",
  },
  {
    name: "Sucursal C Doria",
    address: "Gral. Nicolás Flores 100, Juan C. Doria, 42083 Pachuca de Soto, Hgo.",
    schedule: [
      { day: "Lunes", classes: [{ name: "Ballet Intermedio", time: "5:00 PM" }, { name: "Ballet avanzado", time: "6:00 PM" }] },
      { day: "Martes", classes: [{ name: "Danza urbana", time: "5:00 PM" }, { name: "Ballet inicial", time: "6:00 PM" }] },
      { day: "Miércoles", classes: [{ name: "Ballet Intermedio", time: "5:00 PM" }, { name: "Ballet avanzado", time: "6:00 PM" }] },
      { day: "Jueves", classes: [{ name: "Danza urbana", time: "5:00 PM" }, { name: "Ballet inicial", time: "6:00 PM" }] },
    ],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d234.22492164465064!2d-98.77864826315758!3d20.06724289232217!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1a0e2fed70c93%3A0xc09c12aa10570497!2sOtilio%20Villegas%20100%2C%20Juan%20C.%20Doria%2C%2042083%20Pachuca%20de%20Soto%2C%20Hgo.!5e0!3m2!1ses-419!2smx!4v1737482165236!5m2!1ses-419!2smx",
  },
];
---
<section class="bg-gradient-to-b from-gray-50 to-white py-12 md:py-24 relative overflow-hidden">
  <!-- Efecto de textura decorativa -->
  <div class="absolute inset-0 bg-[radial-gradient(#f3f4f6_1px,transparent_1px)] bg-[size:40px_40px] opacity-20"></div>

  <div class="container mx-auto px-4 md:px-8 relative z-10">
    <!-- Título mejorado -->
    <h2 class="text-center text-4xl md:text-6xl font-bold mb-12 md:mb-20 text-gray-900">
      <span class="bg-gradient-to-r from-pink-600 to-red-600 bg-clip-text text-transparent">
        Nuestras sucursales
      </span>
    </h2>

    <!-- Grid de Sucursales -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-10">
      {branches.map((branch) => (
          <div class="group relative bg-white p-6 md:p-8 rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 border border-gray-200/50 hover:border-gray-300/80">
            <!-- Cabecera con efecto gradiente -->
            <div class="mb-6 pb-6 border-b border-gray-200/50">
              <div class="flex items-center justify-between gap-4">
                <h3 class="text-2xl md:text-3xl font-bold text-gray-900">
                  {branch.name}
                </h3>
                <a
                    href={branch.mapUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="p-2 bg-gradient-to-r from-pink-100 to-red-100 rounded-xl hover:scale-110 transition-transform duration-300 shadow-sm"
                    aria-label={`Ver ubicación de ${branch.name}`}
                >
                  <img
                      src="/images/iconos/ubi.png"
                      alt="Ubicación"
                      class="w-6 h-6 md:w-7 md:h-7"
                  />
                </a>
              </div>
              <p class="mt-4 text-gray-600 text-sm md:text-base leading-relaxed">
                {branch.address}
              </p>
            </div>

            <!-- Mapa interactivo -->
            <div class="relative mb-8 overflow-hidden rounded-2xl shadow-lg transform transition-transform duration-300 hover:scale-[1.02]">
              <iframe
                  src={branch.mapUrl}
                  title={`Mapa de ${branch.name}`}
                  class="w-full h-48 md:h-56 lg:h-64"
                  allowfullscreen=""
                  loading="lazy"
              ></iframe>
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent pointer-events-none"></div>
            </div>

            <!-- Horario mejorado -->
            <div class="space-y-5">
              {branch.schedule.map((scheduleItem) => (
                  <div class="flex flex-col md:flex-row gap-4 p-4 bg-gray-50/50 rounded-xl hover:bg-gray-100/30 transition-colors duration-200">
                    <!-- Día -->
                    <div class="flex items-center md:w-28 flex-none">
                      <span class="w-3 h-3 bg-gradient-to-r from-pink-500 to-red-500 rounded-full mr-3"></span>
                      <span class="text-sm md:text-base font-semibold text-gray-700">
                    {scheduleItem.day}
                  </span>
                    </div>

                    <!-- Clases -->
                    <div class="flex-1 space-y-3">
                      {scheduleItem.classes.map((classItem) => (
                          <div class="flex justify-between items-center bg-white px-4 py-3 rounded-lg shadow-sm border border-gray-200/50">
                      <span class="text-sm md:text-base font-medium text-gray-700">
                        {classItem.name}
                      </span>
                            <span class="text-sm md:text-base font-semibold bg-gradient-to-r from-pink-600 to-red-600 bg-clip-text text-transparent">
                        {classItem.time}
                      </span>
                          </div>
                      ))}
                    </div>
                  </div>
              ))}
            </div>
          </div>
      ))}
    </div>
  </div>
</section>