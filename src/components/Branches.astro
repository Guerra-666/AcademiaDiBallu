---
interface Schedule {
  day: string;
  classes: { name: string; time: string }[];
}

interface Branch {
  name: string;
  address: string;
  schedule: Schedule[];
  mapUrl: string;
}

const branches: Branch[] = [
  {
    name: "Sucursal Chacon",
    address: "Av. Zeus 101, PRI Chacón, 42186 PRI Chacón, Hgo.",
    schedule: [
      { day: "Lunes", classes: [{ name: "Danza urbana", time: "5:00 PM" }, { name: "Ballet inicial", time: "6:00 PM" }] },
      { day: "Martes", classes: [{ name: "Ballet Intermedio", time: "5:00 PM" }, { name: "Ballet avanzado", time: "6:00 PM" }] },
      { day: "Miércoles", classes: [{ name: "Danza urbana", time: "5:00 PM" }, { name: "Ballet inicial", time: "6:00 PM" }] },
      { day: "Jueves", classes: [{ name: "Ballet Intermedio", time: "5:00 PM" }, { name: "Ballet avanzado", time: "6:00 PM" }] },
    ],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d234.20133163622359!2d-98.73568385226545!3d20.08303369834296!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1a73a40fc46ad%3A0x276e5102642c3308!2sPlaza%20Zeus!5e0!3m2!1ses-419!2smx!4v1737037817982!5m2!1ses-419!2smx",
  },
  {
    name: "Sucursal C Doria",
    address: "Gral. Nicolás Flores 100, Juan C. Doria, 42083 Pachuca de Soto, Hgo.",
    schedule: [
      { day: "Lunes", classes: [{ name: "Ballet Intermedio", time: "5:00 PM" }, { name: "Ballet avanzado", time: "6:00 PM" }] },
      { day: "Martes", classes: [{ name: "Danza urbana", time: "5:00 PM" }, { name: "Ballet inicial", time: "6:00 PM" }] },
      { day: "Miércoles", classes: [{ name: "Ballet Intermedio", time: "5:00 PM" }, { name: "Ballet avanzado", time: "6:00 PM" }] },
      { day: "Jueves", classes: [{ name: "Danza urbana", time: "5:00 PM" }, { name: "Ballet inicial", time: "6:00 PM" }] },
    ],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d234.22492164465064!2d-98.77864826315758!3d20.06724289232217!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1a0e2fed70c93%3A0xc09c12aa10570497!2sOtilio%20Villegas%20100%2C%20Juan%20C.%20Doria%2C%2042083%20Pachuca%20de%20Soto%2C%20Hgo.!5e0!3m2!1ses-419!2smx!4v1737482165236!5m2!1ses-419!2smx",
  },
];
---
<section class="bg-gray-100 text-gray-800 py-5 md:py-5">
  <div class="container mx-auto px-6 md:px-12">
    <!-- Título -->
    <h2 class="text-center text-4xl md:text-5xl font-bold mb-12 text-gray-900">
      Visita nuestras sucursales
    </h2>

    <!-- Grid de Sucursales -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      {branches.map((branch) => (
        <div class="bg-white p-8 md:p-10 rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300">
          <!-- Nombre y Dirección -->
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-2xl md:text-3xl font-semibold text-gray-800">
              {branch.name}
            </h3>
            <a
              href={branch.mapUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="text-blue-500 hover:text-blue-700 transition-colors duration-300"
              aria-label={`Ver ubicación de ${branch.name} en Google Maps`}
            >
              <img src="/images/iconos/ubi.png" alt="Ubicación" class="w-5 h-5" />
            </a>
          </div>
          <p class="text-gray-600 mb-6 leading-relaxed">
            {branch.address}
          </p>

          <!-- Mapa -->
          <iframe
            src={branch.mapUrl}
            title={`Mapa de ${branch.name}`}
            class="w-full h-56 md:h-64 rounded-lg shadow-md mb-6 transition-transform duration-300 hover:scale-105"
            allowfullscreen=""
            loading="lazy"
          ></iframe>

          <!-- Horario -->
          <div class="overflow-hidden">
            <table class="w-full text-sm md:text-base text-gray-700">
              <tbody>
                {branch.schedule.map((scheduleItem) => (
                  <tr class="hover:bg-gray-100 transition-colors duration-200 mb-4"> <!-- Añadido mb-4 para espacio entre días -->
                    <!-- Día -->
                    <td class="py-4 px-4 text-left font-medium text-gray-800 border-b bg-gray-100"> <!-- Ajuste de padding -->
                      <div class="flex items-center">
                        <span class="inline-block w-2 h-2 mr-2 bg-pink-500 rounded-full"></span>
                        {scheduleItem.day}
                      </div>
                    </td>
                    <!-- Clases -->
                    <td class="py-4 px-4 text-right text-gray-800 border-b"> <!-- Ajuste de padding -->
                      {scheduleItem.classes.length > 0 ? (
                        <ul class="space-y-2"> <!-- Ajuste de espacio entre clases -->
                          {scheduleItem.classes.map((classItem) => (
                            <li key={classItem.name} class="flex justify-between items-center bg-gray-200 text-gray-800 px-3 py-2 rounded-lg shadow-md"> <!-- Ajuste de padding -->
                              <span class="text-left">{classItem.name}</span>
                              <span class="text-right">{classItem.time}</span>
                            </li>
                          ))}
                        </ul>
                      ) : (
                        <span>Cerrado</span>
                      )}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>