    /* Animaciones personalizadas */
    @keyframes fade-in-up {
      0% { opacity: 0; transform: translateY(20px); }
      100% { opacity: 1; transform: translateY(0); }
    }

    @keyframes float-icon {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-8px); }
    }

    @keyframes card-hover {
      0% { transform: translateY(0); }
      50% { transform: translateY(-4px); }
      100% { transform: translateY(0); }
    }

    /* Estilos base */
    .animate-fade-in-up {
      animation: fade-in-up 0.6s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
    }

    .backdrop-blur-xs {
      backdrop-filter: blur(2px);
      -webkit-backdrop-filter: blur(2px);
    }

    /* Efectos hover para tarjetas */
    .group:hover .group-hover\:animate-float-icon {
      animation: float-icon 3s ease-in-out infinite;
    }

    .group:hover {
      animation: card-hover 1.5s ease-in-out infinite;
      transform-origin: center bottom;
    }

    /* Mejoras de gradiente interactivo */
    .group::before {
      content: '';
      position: absolute;
      inset: -2px;
      background: linear-gradient(
          45deg,
          rgba(236, 72, 153, 0.2) 0%,
          rgba(239, 68, 68, 0.2) 50%,
          rgba(234, 179, 8, 0.2) 100%
      );
      border-radius: 1rem;
      z-index: -1;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .group:hover::before {
      opacity: 1;
    }

    /* Efecto de brillo en iconos */
    .group:hover span[class*="bg-gradient"] {
      position: relative;
    }

    .group:hover span[class*="bg-gradient"]::after {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle at center,
      rgba(255,255,255,0.4) 0%,
      rgba(255,255,255,0) 70%);
      animation: shine 2s infinite;
    }

    @keyframes shine {
      0% { transform: translate(-50%, -50%) scale(0); opacity: 0; }
      50% { opacity: 1; }
      100% { transform: translate(50%, 50%) scale(1); opacity: 0; }
    }
