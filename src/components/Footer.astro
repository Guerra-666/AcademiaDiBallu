---
const socialLinks = [
  { name: "LinkedIn", url: "https://linkedin.com/in/adrianguerra", icon: "/images/svg/li.svg" },
  { name: "GitHub", url: "https://github.com/Guerra-666", icon: "/images/svg/git.svg" },
  { name: "Website", url: "https://devguerra.com", icon: "/images/svg/web.svg" },
];
const adrianGuerraUrl: string = "https://devguerra.com";
---

<footer class="bg-gradient-to-b from-gray-50 to-white py-12 relative overflow-hidden border-t border-gray-200/50">
  <!-- Efecto de textura decorativa -->
  <div class="absolute inset-0 bg-[radial-gradient(#f3f4f6_1px,transparent_1px)] bg-[size:40px_40px] opacity-20"></div>

  <div class="container mx-auto px-4 md:px-8 relative z-10">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6 mb-8">
      <!-- Logo con efecto vidrio -->

        <a href="#">
          <img
              src="/images/LogoDiballu.png"
              alt="Academia de Danza Di Ballu"
              class="w-32 md:w-40 transition-transform duration-300 hover:scale-105"
          />
        </a>


      <!-- Redes sociales mejoradas -->
      <div class="flex items-center gap-4 md:gap-6">
        {socialLinks.map((link) => (
            <a
                key={link.name}
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 rounded-full bg-white/80 backdrop-blur-sm border border-gray-200/50 hover:border-pink-500/50 shadow-md hover:shadow-lg transition-all duration-300 hover:-translate-y-1"
                aria-label={link.name}
            >
              <img
                  src={link.icon}
                  alt={link.name}
                  class="w-6 h-6 md:w-7 md:h-7"
              />
            </a>
        ))}
      </div>
    </div>

    <!-- Divider sutil -->
    <div class="my-6 border-b border-gray-200/30"></div>

    <!-- Textos legales -->
    <div class="flex flex-col-reverse md:flex-row items-center justify-between gap-4 text-center">
      <p class="text-sm md:text-base text-gray-600">
        © {new Date().getFullYear()} Academia de Danza Di Ballu
      </p>

      <p class="text-sm md:text-base text-gray-600">
        Diseñado por{" "}
        <a
            href={adrianGuerraUrl}
            class="bg-gradient-to-r from-pink-600 to-red-600 bg-clip-text text-transparent font-medium hover:underline"
        >
          Adrian Guerra Dev
        </a>
      </p>
    </div>
  </div>
</footer>