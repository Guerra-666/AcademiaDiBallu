---
const title: string = "Bienvenidos a la Academia de Danza";
const subtitle: string = "Donde la pasión por la danza cobra vida";
const callToAction: string = "Agendar clase muestra gratuita";
const backgroundImages: string[] = [
  "/images/hero.webp",
  "/images/hero2.webp",
  "/images/hero3.webp",
];
const logoUrl: string = "/images/LogoDiballu.png";
const whatsappUrl: string = "https://wa.me/5217713384831?text=Hola,%20me%20interesaria%20agendar%20una%20clase%20muestra,%20me%20podria%20brindar%20mas%20informes"; // Reemplaza con tu número de WhatsApp y mensaje predeterminado
---
<section class="relative h-screen overflow-hidden">
  <!-- Fondo con imágenes alternadas -->
  <div class="absolute inset-0">
    {backgroundImages.map((image, index) => (
        <div
            class={`absolute inset-0 h-full w-full bg-cover bg-center transition-opacity duration-[3000ms] ${
                index === 0 ? "opacity-100" : "opacity-0"
            }`}
            style={`background-image: url('${image}')`}
            data-carousel-slide={index}
        ></div>
    ))}
  </div>

  <!-- Capa de overlay mejorada -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/80"></div>

  <!-- Contenido -->
  <div class="relative z-10 flex flex-col items-center justify-center h-full px-4 md:px-8 text-center">
    <!-- Contenedor del logo con efecto borde vidrio -->
    <div class="backdrop-blur-xl bg-white/30 p-6 rounded-3xl shadow-2xl mb-8 animate-fade-in-down border border-white/10">
      <img
          src={logoUrl}
          alt="Logo de la Academia de Danza"
          class="w-52 md:w-80 h-auto contrast-125 brightness-110 drop-shadow-2xl"
          loading="eager"
      />
    </div>

    <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white [text-shadow:_0_2px_12px_rgb(0_0_0_/_40%)]">
      {title}
    </h1>

    <p class="mt-4 text-xl md:text-2xl max-w-2xl leading-relaxed text-gray-200 font-medium">
      {subtitle}
    </p>

    <a
        href={whatsappUrl}
        class="mt-10 px-8 py-4 bg-gradient-to-r from-pink-600 to-red-600 hover:from-red-700 hover:to-pink-700 text-white text-xl md:text-2xl font-semibold rounded-full shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 border-2 border-white/20"
        target="_blank"
        rel="noopener noreferrer"
    >
      {callToAction}
    </a>
  </div>
</section>