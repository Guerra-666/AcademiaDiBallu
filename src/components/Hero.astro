---
const title: string = "Bienvenidos a la Academia de Danza";
const subtitle: string = "Donde la pasión por la danza cobra vida";
const callToAction: string = "Agendar clase muestra gratuita";
const backgroundImages: string[] = [
  "/images/hero.webp",
  "/images/hero2.webp",
  "/images/hero3.webp",
];
const logoUrl: string = "/images/LogoDiballu.png";
const whatsappUrl: string = "https://wa.me/5217713384831?text=Hola,%20me%20interesaria%20agendar%20una%20clase%20muestra,%20me%20podria%20brindar%20mas%20informes"; // Reemplaza con tu número de WhatsApp y mensaje predeterminado
---
<section class="relative h-screen overflow-hidden">
  <!-- Fondo con imágenes alternadas -->
  <div class="absolute inset-0">
    {backgroundImages.map((image, index) => (
        <div
            class={`absolute inset-0 h-full w-full bg-cover bg-center transition-opacity duration-[3000ms] ${
                index === 0 ? "opacity-100" : "opacity-0"
            }`}
            style={`background-image: url('${image}')`}
            data-carousel-slide={index}
        ></div>
    ))}
  </div>

  <!-- Capa de overlay mejorada con efecto vignette -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black/90"></div>

  <!-- Contenido -->
  <div class="relative z-10 flex flex-col items-center justify-center h-full px-8 md:px-16 text-center">
    <!-- Contenedor del logo con efecto vidrio moderno -->
    <div class="backdrop-blur-xl bg-white/30 p-6 rounded-3xl shadow-2xl mb-8 animate-fade-in-down border border-white/10">
      <img
          src={logoUrl}
          alt="Logo de la Academia de Danza"
          class="w-52 md:w-80 h-auto contrast-125 brightness-110 drop-shadow-2xl"
          loading="eager"
      />
    </div>

    <h1 class="text-5xl md:text-7xl font-bold mb-6 text-white [text-shadow:_0_2px_8px_rgb(0_0_0_/_50%)]">
      {title}
    </h1>

    <p class="mt-6 text-xl md:text-3xl max-w-3xl leading-relaxed text-gray-200 font-medium backdrop-blur-lg bg-white/10 px-6 py-4 rounded-xl border border-white/10">
      {subtitle}
    </p>

    <a
        href={whatsappUrl}
        class="mt-12 px-10 py-5 bg-gradient-to-r from-pink-600 to-red-600 hover:from-red-700 hover:to-pink-700 text-white text-2xl font-bold rounded-full shadow-2xl hover:shadow-3xl transform hover:scale-110 transition-all duration-300 border-2 border-white/20 hover:border-white/40 group"
        target="_blank"
        rel="noopener noreferrer"
    >
      <span class="group-hover:tracking-wide transition-all duration-300">
        {callToAction}
      </span>
    </a>
  </div>
</section>